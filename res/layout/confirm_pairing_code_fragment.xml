<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginTop="@dimen/device_detail_top_margin"
        android:src="@drawable/ic_smartphone"
        android:tint="@color/car_ui_color_accent"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/instruction_detail_margin"
        android:gravity="center"
        android:text="@string/associated_device_pairing_code_title"
        android:textSize="@dimen/car_ui_body1_size"
        android:textAppearance="@style/TextAppearance.CarUi"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/instruction_detail_margin"
        android:gravity="center"
        android:text="@string/associated_device_pairing_message"
        android:textSize="@dimen/car_ui_body2_size"/>
    <TextView
        android:id="@+id/pairing_code"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/instruction_detail_margin"
        android:gravity="center"
        android:textSize="@dimen/car_ui_display1_size"
        android:letterSpacing="@dimen/pairing_code_text_spacing"
        android:textColor="@color/car_ui_color_accent"/>
</LinearLayout>
