<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart">
    <ImageView
        android:id="@+id/device_list_item_icon"
        android:layout_width="@dimen/car_ui_preference_icon_size"
        android:layout_height="@dimen/car_ui_preference_icon_size"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/list_item_margin_bottom"
        android:layout_marginEnd="@dimen/list_item_margin_end"
        android:layout_marginTop="@dimen/list_item_margin_top"
        android:scaleType="fitCenter"
        android:src="@*android:drawable/ic_settings_bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Preference.CarUi.Icon"/>
    <TextView
        android:id="@+id/device_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/car_ui_preference_content_margin_bottom"
        android:layout_marginStart="@dimen/list_item_margin_end"
        android:layout_marginTop="@dimen/car_ui_preference_content_margin_top"
        android:singleLine="true"
        android:text="@string/default_device_name"
        android:textAppearance="@style/TextAppearance.CarUi.PreferenceTitle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/device_list_item_icon"
        app:layout_constraintEnd_toStartOf="@+id/device_list_item_delete_icon_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/device_list_item_delete_icon_container"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/device_list_item_delete_icon"
            android:layout_width="@dimen/car_ui_preference_category_icon_size"
            android:layout_height="@dimen/car_ui_preference_category_icon_size"
            android:layout_marginBottom="@dimen/car_ui_preference_content_margin_bottom"
            android:layout_marginStart="@dimen/car_ui_preference_category_icon_margin_end"
            android:layout_marginEnd="@dimen/car_ui_preference_category_icon_margin_end"
            android:layout_marginTop="@dimen/car_ui_preference_content_margin_top"
            android:scaleType="fitCenter"
            android:src="@drawable/car_ui_icon_close"
            android:tint="@color/car_ui_preference_icon_color"
        />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
